<%= simple_form_for @bid, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :address ,required: true %>
  <%#= error_span(@bid[:address]) %>
  <%= f.input :time_from ,required: true, as: :datetime_picker%>
  <%#= error_span(@bid[:from]) %>
  <%= f.input :time_to ,required: true, as: :datetime_picker%>
  <%#= error_span(@bid[:to]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                bids_path, :class => 'btn btn-default' %>
<% end %>
