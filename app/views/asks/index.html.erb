<%- model_class = Ask -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:time_from) %></th>
      <th><%= model_class.human_attribute_name(:time_to) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th colspan="2"><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @asks_matched.each do |ask| %>
      <tr>
        <td><%= link_to ask.id, ask_path(ask) %></td>
        <td><%= ask.address %></td>
        <td><%= ask.time_from %></td>
        <td><%= ask.time_to %></td>
        <td><%= ask.created_at %></td>
        <% if ask.match.status == "waiting" %>
          <td><span class="fa fa-heart"></span></td>
          <td><span class="fa fa-ban"></span></td>
        <% else %>
          <td colspan="2"><b>CONTRACTED</b></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:time_from) %></th>
      <th><%= model_class.human_attribute_name(:time_to) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @asks_not_matched.each do |ask| %>
      <tr>
        <td><%= link_to ask.id, ask_path(ask) %></td>
        <td><%= ask.address %></td>
        <td><%= ask.time_from %></td>
        <td><%= ask.time_to %></td>
        <td><%=l ask.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_ask_path(ask), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      ask_path(ask),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_ask_path,
            :class => 'btn btn-primary' %>
