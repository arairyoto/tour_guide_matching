<%= simple_form_for @ask, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :address , required: true %>
  <%#= error_span(@ask[:address]) %>
  <%= f.input :time_from , required: true, as: :datetime_picker %>
  <%#= error_span(@ask[:from]) %>
  <%= f.input :time_to , required: true , as: :datetime_picker %>
  <%#= error_span(@ask[:to]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                asks_path, :class => 'btn btn-default' %>
<% end %>
